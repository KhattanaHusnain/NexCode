<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Others' Messages (Left aligned) -->
    <LinearLayout
        android:id="@+id/others_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:visibility="visible">

        <!-- Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="12dp"
            android:layout_gravity="top"
            android:src="@drawable/ic_profile"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:focusable="true" />

        <!-- Message Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="60dp">

            <!-- Username -->
            <TextView
                android:id="@+id/username_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="13sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp" />

            <!-- Message Bubble -->
            <LinearLayout
                android:id="@+id/others_message_bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/others_message_bubble"
                android:padding="16dp"
                android:minWidth="100dp"
                android:maxWidth="280dp">

                <!-- Message Text -->
                <TextView
                    android:id="@+id/message_others"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message content"
                    android:textSize="16sp"
                    android:textColor="#2C2C2C"
                    android:textIsSelectable="true"
                    android:linksClickable="true"
                    android:autoLink="web|email|phone"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="6dp" />

                <!-- Message Time -->
                <TextView
                    android:id="@+id/message_time_others"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30 PM"
                    android:textSize="11sp"
                    android:textColor="#888888"
                    android:layout_gravity="end" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Current User's Messages (Right aligned) -->
    <LinearLayout
        android:id="@+id/current_user_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:visibility="gone">

        <!-- Message Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="60dp"
            android:gravity="end">

            <!-- Username -->
            <TextView
                android:id="@+id/username_current_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You"
                android:textSize="13sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp" />

            <!-- Message Bubble -->
            <LinearLayout
                android:id="@+id/current_user_message_bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/current_user_message_bubble"
                android:padding="16dp"
                android:minWidth="100dp"
                android:maxWidth="280dp">

                <!-- Message Text -->
                <TextView
                    android:id="@+id/message_current_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message content"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textIsSelectable="true"
                    android:linksClickable="true"
                    android:autoLink="web|email|phone"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="6dp" />

                <!-- Message Time -->
                <TextView
                    android:id="@+id/message_time_current_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30 PM"
                    android:textSize="11sp"
                    android:textColor="#E8E8E8"
                    android:layout_gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_current_user"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="12dp"
            android:layout_gravity="top"
            android:src="@drawable/ic_profile"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>