<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:background="@color/background_light"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- Profile Section Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Profile Shimmer Loading -->
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/profile_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shimmer_duration="1000"
                    app:shimmer_auto_start="true"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="#E0E0E0"
                            android:layout_marginEnd="16dp"
                            android:backgroundTint="#E0E0E0"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <View
                                android:layout_width="150dp"
                                android:layout_height="20dp"
                                android:background="#E0E0E0"
                                android:layout_marginBottom="8dp"/>

                            <View
                                android:layout_width="200dp"
                                android:layout_height="14dp"
                                android:background="#E0E0E0"
                                android:layout_marginBottom="4dp"/>

                            <View
                                android:layout_width="180dp"
                                android:layout_height="12dp"
                                android:background="#E0E0E0"/>
                        </LinearLayout>

                        <View
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="#E0E0E0"/>
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>

                <!-- Actual Profile Content -->
                <LinearLayout
                    android:id="@+id/profile_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_profile"
                        app:civ_border_width="3dp"
                        app:civ_border_color="#002B5B"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/user_full_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#002B5B"/>

                        <TextView
                            android:id="@+id/user_degree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Information Technology"
                            android:textSize="14sp"
                            android:textColor="#616161"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:id="@+id/user_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="12sp"
                            android:textColor="#9E9E9E"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/notification_bell"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notification"
                        android:contentDescription="Notifications"/>
                </LinearLayout>

                <!-- Dashboard Shimmer Loading -->
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/dashboard_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:shimmer_duration="1000"
                    app:shimmer_auto_start="true"
                    android:visibility="visible">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp"
                        app:cardBackgroundColor="#E0E0E0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <View
                                android:layout_width="180dp"
                                android:layout_height="18dp"
                                android:background="#CCCCCC"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="16dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <View
                                        android:layout_width="30dp"
                                        android:layout_height="24dp"
                                        android:background="#CCCCCC"/>

                                    <View
                                        android:layout_width="50dp"
                                        android:layout_height="12dp"
                                        android:background="#CCCCCC"
                                        android:layout_marginTop="4dp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <View
                                        android:layout_width="30dp"
                                        android:layout_height="24dp"
                                        android:background="#CCCCCC"/>

                                    <View
                                        android:layout_width="50dp"
                                        android:layout_height="12dp"
                                        android:background="#CCCCCC"
                                        android:layout_marginTop="4dp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <View
                                        android:layout_width="30dp"
                                        android:layout_height="24dp"
                                        android:background="#CCCCCC"/>

                                    <View
                                        android:layout_width="60dp"
                                        android:layout_height="12dp"
                                        android:background="#CCCCCC"
                                        android:layout_marginTop="4dp"/>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="16dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <View
                                        android:layout_width="40dp"
                                        android:layout_height="20dp"
                                        android:background="#CCCCCC"/>

                                    <View
                                        android:layout_width="60dp"
                                        android:layout_height="12dp"
                                        android:background="#CCCCCC"
                                        android:layout_marginTop="4dp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <View
                                        android:layout_width="40dp"
                                        android:layout_height="20dp"
                                        android:background="#CCCCCC"/>

                                    <View
                                        android:layout_width="70dp"
                                        android:layout_height="12dp"
                                        android:background="#CCCCCC"
                                        android:layout_marginTop="4dp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </com.facebook.shimmer.ShimmerFrameLayout>

                <!-- Actual Dashboard Stats Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/dashboard_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#002B5B"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Learning Dashboard"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>

                        <!-- Stats Grid -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp">

                            <!-- Completed Courses -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/completed_courses_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="24sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Completed"
                                    android:textColor="#B3FFFFFF"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <!-- Enrolled Courses -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/enrolled_courses_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="24sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Enrolled"
                                    android:textColor="#B3FFFFFF"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <!-- Certificates -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/certificates_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="24sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Certificates"
                                    android:textColor="#B3FFFFFF"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Second Row of Stats -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp">

                            <!-- Quiz Score -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/quiz_score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0%"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Quiz Average"
                                    android:textColor="#B3FFFFFF"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <!-- Assignment Score -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/assignment_score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0%"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Assignment Avg"
                                    android:textColor="#B3FFFFFF"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Popular Courses Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Popular Courses"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <TextView
                        android:id="@+id/see_all_popular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:textColor="#1E88E5"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Courses Shimmer Loading -->
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/courses_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:shimmer_duration="1000"
                    app:shimmer_auto_start="true"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#E0E0E0">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:background="#CCCCCC"
                                    android:layout_marginBottom="8dp"/>

                                <View
                                    android:layout_width="120dp"
                                    android:layout_height="16dp"
                                    android:background="#CCCCCC"
                                    android:layout_marginBottom="4dp"/>

                                <View
                                    android:layout_width="100dp"
                                    android:layout_height="12dp"
                                    android:background="#CCCCCC"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#E0E0E0">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:background="#CCCCCC"
                                    android:layout_marginBottom="8dp"/>

                                <View
                                    android:layout_width="120dp"
                                    android:layout_height="16dp"
                                    android:background="#CCCCCC"
                                    android:layout_marginBottom="4dp"/>

                                <View
                                    android:layout_width="100dp"
                                    android:layout_height="12dp"
                                    android:background="#CCCCCC"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>

                <!-- Actual Courses RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/popular_courses_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    tools:itemCount="2"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:listitem="@layout/home_item"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- Quizzes Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recent Quizzes"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <TextView
                        android:id="@+id/see_all_quizzes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:textColor="#1E88E5"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Quizzes Shimmer Loading -->
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/quizzes_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:shimmer_duration="1000"
                    app:shimmer_auto_start="true"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="200dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#E0E0E0">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <View
                                    android:layout_width="150dp"
                                    android:layout_height="16dp"
                                    android:background="#CCCCCC"
                                    android:layout_marginBottom="8dp"/>

                                <View
                                    android:layout_width="100dp"
                                    android:layout_height="12dp"
                                    android:background="#CCCCCC"
                                    android:layout_marginBottom="8dp"/>

                                <View
                                    android:layout_width="80dp"
                                    android:layout_height="12dp"
                                    android:background="#CCCCCC"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="200dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#E0E0E0">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <View
                                    android:layout_width="150dp"
                                    android:layout_height="16dp"
                                    android:background="#CCCCCC"
                                    android:layout_marginBottom="8dp"/>

                                <View
                                    android:layout_width="100dp"
                                    android:layout_height="12dp"
                                    android:background="#CCCCCC"
                                    android:layout_marginBottom="8dp"/>

                                <View
                                    android:layout_width="80dp"
                                    android:layout_height="12dp"
                                    android:background="#CCCCCC"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>

                <!-- Actual Quizzes RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/quizzes_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_quiz"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- Assignments Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recent Assignments"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <TextView
                        android:id="@+id/see_all_assignments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:textColor="#1E88E5"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Assignments Shimmer Loading -->
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/assignments_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:shimmer_duration="1000"
                    app:shimmer_auto_start="true"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="220dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#E0E0E0">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <View
                                    android:layout_width="160dp"
                                    android:layout_height="16dp"
                                    android:background="#CCCCCC"
                                    android:layout_marginBottom="8dp"/>

                                <View
                                    android:layout_width="120dp"
                                    android:layout_height="12dp"
                                    android:background="#CCCCCC"
                                    android:layout_marginBottom="8dp"/>

                                <View
                                    android:layout_width="90dp"
                                    android:layout_height="12dp"
                                    android:background="#CCCCCC"
                                    android:layout_marginBottom="16dp"/>

                                <View
                                    android:layout_width="100dp"
                                    android:layout_height="14dp"
                                    android:background="#CCCCCC"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="220dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#E0E0E0">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <View
                                    android:layout_width="160dp"
                                    android:layout_height="16dp"
                                    android:background="#CCCCCC"
                                    android:layout_marginBottom="8dp"/>

                                <View
                                    android:layout_width="120dp"
                                    android:layout_height="12dp"
                                    android:background="#CCCCCC"
                                    android:layout_marginBottom="8dp"/>

                                <View
                                    android:layout_width="90dp"
                                    android:layout_height="12dp"
                                    android:background="#CCCCCC"
                                    android:layout_marginBottom="16dp"/>

                                <View
                                    android:layout_width="100dp"
                                    android:layout_height="14dp"
                                    android:background="#CCCCCC"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>

                <!-- Actual Assignments RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/assignments_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_assignment"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>