<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Path Header -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/path_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_banner"
                android:contentDescription="Learning Path Thumbnail"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80002B5B"/>

            <TextView
                android:id="@+id/path_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Stack Developer"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:padding="16dp"/>
        </FrameLayout>

        <!-- Path Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Path Description -->
            <TextView
                android:id="@+id/path_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Master both front-end and back-end technologies to become a complete developer"
                android:textSize="14sp"
                android:textColor="#757575"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Path Meta -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <!-- Courses Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_courses"
                        android:tint="#002B5B"
                        android:contentDescription="Courses Count"/>

                    <TextView
                        android:id="@+id/courses_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 Courses"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- Duration -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_time"
                        android:contentDescription="Path Duration"
                        app:tint="#002B5B" />

                    <TextView
                        android:id="@+id/path_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 Months"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Start Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Path"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"
                app:cornerRadius="8dp"
                android:backgroundTint="#002B5B"
                style="@style/Widget.MaterialComponents.Button"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>