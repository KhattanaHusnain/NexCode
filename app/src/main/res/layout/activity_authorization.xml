<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/Light_Gray">

    <!-- App Name -->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="NexCode"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/Dark_Blue"
        android:gravity="center" />

    <!-- Welcome Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Welcome!\nLet's get started"
        android:textSize="16sp"
        android:textColor="@color/Dark_Blue"
        android:gravity="center" />

    <!-- Illustration (Add your drawable here) -->
    <ImageView
        android:id="@+id/illustration"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/authorization_illustration"
        android:contentDescription="Illustration Image"
        android:scaleType="fitCenter" />

    <!-- Login Button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Login"
        android:textColor="@color/Dark_Blue"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:stateListAnimator="@null"
        android:gravity="center" />

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/signup_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/Dark_Blue"
        android:gravity="center" />

    <!-- Footer Text -->
    <TextView
        android:id="@+id/footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="AI-Powered E-Learning Platform\nNexCode 2025"
        android:textSize="12sp"
        android:textColor="#707070"
        android:gravity="center" />

</LinearLayout>
