<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:gravity="center">
<androidx.cardview.widget.CardView
    android:id="@+id/course_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="8dp">

        <!-- Course Image -->
        <ImageView
            android:id="@+id/course_image"
            android:layout_width="114dp"
            android:layout_height="87dp"
            android:contentDescription="Course Image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_course" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            >
            <!-- Course Details -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/course_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Structures"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#002B5B" />

                <TextView
                    android:id="@+id/course_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 50+ Learning"
                    android:textSize="10sp"
                    android:drawableLeft="@drawable/ic_members"
                    android:textColor="#002B5B"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Open Course Icon -->
            <ImageButton
                android:id="@+id/open_course_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_open_course"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Open Course Button" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>
