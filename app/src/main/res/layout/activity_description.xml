<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        android:contentDescription="Back"
        />

    <!-- Title and Description -->
    <TextView
        android:id="@+id/course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Want to learn Data Structure Algorithm?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/Dark_Blue"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_course_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join now!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/Dark_Blue"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/course_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A data structure is a way of organizing and storing data so that it can be accessed and modified efficiently. Data structures are fundamental concepts in computer science and are essential for designing efficient algorithms."
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/Dark_Blue"
        android:layout_marginTop="8dp" />

    <!-- Image -->
    <ImageView
        android:id="@+id/iv_course_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_course"
        android:contentDescription="Course Image" />

    <!-- Course Features -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:gravity="bottom"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✔ Enhance learning with video lectures."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✔ PDF notes available"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✔ Offline accessibility"
            android:textSize="14sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Join Course Button -->
    <Button
        android:id="@+id/btn_join_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="JOIN COURSE"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:backgroundTint="@color/Dark_Blue"
        android:paddingVertical="12dp" />

</LinearLayout>
