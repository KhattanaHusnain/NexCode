<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Admin Base Theme -->
    <style name="AdminBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/admin_primary</item>
        <item name="colorPrimaryDark">@color/admin_primary_dark</item>
        <item name="colorAccent">@color/admin_accent</item>
        <item name="android:textColorPrimary">@color/admin_text_primary</item>
        <item name="android:textColorSecondary">@color/admin_text_secondary</item>
        <item name="android:windowBackground">@color/admin_background</item>
    </style>

    <!-- Admin Splash Theme -->
    <style name="AdminSplashTheme" parent="AdminBaseTheme">
        <item name="android:windowBackground">@drawable/admin_splash_gradient_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Admin App Theme -->
    <style name="AdminAppTheme" parent="AdminBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/admin_primary_dark</item>
        <item name="android:navigationBarColor">@color/admin_primary</item>
    </style>

    <!-- Admin Button Styles -->
    <style name="AdminButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/admin_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="AdminButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/admin_primary</item>
        <item name="strokeColor">@color/admin_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <!-- Admin Text Styles -->
    <style name="AdminTitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/admin_text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="AdminSubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/admin_text_secondary</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="AdminBodyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/admin_text_primary</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- Admin Card Style -->
    <style name="AdminCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/admin_surface</item>
        <item name="contentPadding">16dp</item>
    </style>

</resources>